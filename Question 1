#include <stdio.h>
#include <string.h>

int main()
{
	
	// Question 1:
	
	char PizzaSize[50];
	printf("Choose a pizza size: ");
	scanf("%s", &PizzaSize );
	if (strcmp(PizzaSize, "Small") == 0 ||
		strcmp(PizzaSize, "Medium") == 0 ||
		strcmp(PizzaSize, "Large") == 0) 
	{
		printf("Your chosen pizza size is: %s", PizzaSize);
	}	else	{
		printf("Invalid Pizza Size");
	}
	
	return 0;
